# Configuration Docker pour l'environnement local
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Base de données
DB_NAME=kempo_db
DB_USERNAME=kempo_user
DB_PASSWORD=secure_database_password_change_me
DB_ROOT_PASSWORD=secure_root_password_change_me

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-me
JWT_EXPIRES_IN=24h

# Chiffrement AES-256
ENCRYPTION_KEY=your-encryption-key-must-be-very-long-and-secure-change-me
ENCRYPTION_SALT=your-unique-salt-for-key-derivation-change-me

# Mailjet Configuration
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key

# Frontend
REACT_APP_API_URL=http://localhost:3001

# Sécurité
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
