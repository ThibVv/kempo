{
  "name": "kenpo-backend",
  "type": "module",
  "scripts": {
    "cli": "node --no-warnings=ExperimentalWarning --experimental-strip-types --experimental-transform-types",
    "watch": "yarn cli --watch --",
    "dev": "yarn watch src/main.ts",
    "build": "tsc",
    "start": "npx tsx src/main.ts",
    "test-server": "node src/main.ts",
    "create-admin": "yarn cli src/createAdmin.ts",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "yarn cli ./node_modules/.bin/mikro-orm migration:up",
    "schema:create": "yarn cli ./node_modules/.bin/mikro-orm schema:create",
    "schema:update": "yarn cli ./node_modules/.bin/mikro-orm schema:update",
    "init-db": "yarn cli src/initDb.ts",
    "create-user-table": "yarn cli src/createUserTable.ts",
    "apply-new-migrations": "yarn cli src/applyNewMigrations.ts",
    "update-user-grade": "yarn cli src/updateUserWithGrade.ts",
    "add-grade-column": "yarn cli src/addGradeColumn.ts",
    "create-tournament-registration": "yarn cli src/createTournamentRegistrationTable.ts",
    "test-tournament-registration": "yarn cli src/testTournamentRegistration.ts",
    "check-database": "yarn cli src/checkDatabase.ts",
    "check-and-create-table": "yarn cli src/checkAndCreateTable.ts",
    "create-table-direct": "node src/createTableWithMysql2.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-openapi": "^0.19.2",
    "@mikro-orm/core": "^6.4.11",
    "@mikro-orm/migrations": "^6.4.11",
    "@mikro-orm/mysql": "^6.4.11",
    "@mikro-orm/seeder": "^6.4.11",
    "@scalar/hono-api-reference": "^0.7.4",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^8.0.0",
    "express-slow-down": "^2.1.0",
    "helmet": "^8.1.0",
    "hono": "^4.7.5",
    "jsonwebtoken": "^9.0.2",
    "kenpo-backend": "file:",
    "mysql2": "^3.14.1",
    "node-mailjet": "^6.0.8",
    "tsx": "^4.7.1",
    "uuid": "^11.1.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@mikro-orm/cli": "^6.4.11",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.17",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
