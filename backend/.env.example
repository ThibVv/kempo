# Configuration de sécurité pour l'environnement de production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# Chiffrement AES-256
ENCRYPTION_KEY=your-encryption-key-must-be-very-long-and-secure
ENCRYPTION_SALT=your-unique-salt-for-key-derivation

# Base de données
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kempo_db
DB_USERNAME=kempo_user
DB_PASSWORD=secure_database_password

# Mailjet Configuration
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key

# Configuration du serveur
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/your/ssl/certificate.pem
SSL_KEY_PATH=/path/to/your/ssl/private-key.pem
SSL_CA_PATH=/path/to/your/ssl/ca-bundle.pem

# Sécurité
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_SIZE=1048576

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/kempo/app.log
AUDIT_LOG_FILE=/var/log/kempo/audit.log

# Monitoring
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics
